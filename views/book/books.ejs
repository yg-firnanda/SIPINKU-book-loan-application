<div class="container" style="margin-top: 9rem">
    <h1 class="mb-4">Genre Buku: <%= bookGenre %></h1>
    <div class="row">
        <% books.forEach(book => { %>
            <div class="col-md-3 mb-3">
                <div class="card">
                    <img src="<%= book.cover_url %>" class="card-img-top" alt="Book 4" height="380">
                    <div class="card-body">
                        <a href="/book/<%= book._id %>" class="text-black text-decoration-none">
                            <h5 class="card-title" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"><%= book.title %></h5>
                        </a>
                        <p class="card-text"><%= book.writer %></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>