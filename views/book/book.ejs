
<div class="container" style="margin-top: 9rem;">
    <div class="row mt-5">
        <div class="col-md-6">
            <div class="img-box text-center">
                <img src="<%= book.cover_url %>" class="book-cover w-50" alt="Book Cover | <%= book.title %>">
            </div>
        </div>
        <div class="col-md-6">
            <h2><%= book.title %></h2>
            <p><strong>Genre:</strong> <%= book.genre %></p>
            <p><strong>Penulis:</strong> <%= book.writer %></p>
            <p><strong>Deskripsi:</strong> <%= book.description %></p>
            <p><strong>Penerbit:</strong> <%= book.publisher %></p>
            <p><strong>Tahun Terbit:</strong> <%= book.year_release %></p>
            <% console.log(isFine) %>
            <% if(isFine === true) { %>
                <div class="btn btn-secondary disabled">Bayar Denda Dahulu</div>
            <% } else { %>
                <% if(loanApprove === 'loan') { %>
                    <a href="/loan/<%= book._id %>">
                        <button class="btn btn-primary">Pinjam Buku</button>
                    </a>
                <% } else if(loanApprove === 'pending') { %>
                    <button class="btn btn-secondary disabled">Menunggu persetujuan admin</button>
                <% } else if(loanApprove === 'reject') { %>
                    <button class="btn btn-secondary disabled">Pinjam lagi pada <%= timeADay %></button>
                <% } else if(loanApprove === 'approve') { %>
                    <a href="/loan/payment/<%= book._id %>">
                        <button class="btn btn-success">Bayar Sekarang</button>
                    </a>
                <% } %>
            <% } %>
        </div>
    </div>
</div>
