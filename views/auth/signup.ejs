<div class="center-div my-5">
    <div class="login-container h-100 d-flex align-items-center justify-content-center">
        <div class="card" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; width: 500px;">
            <div class="card-body">
                <h3 class="card-title text-center mt-2 mb-4">Daftar Pengguna Baru</h3>
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <label for="nama">Nama</label>
                        <input type="text" name="name" class="form-control mb-3">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" class="form-control mb-3">
                    </div>
                    <div class="form-group mb-3">
                        <label for="role">Role</label>
                        <select name="role" id="role" class="form-select">
                            <option value="pelajar">Pelajar</option>
                            <option value="karyawan swasta">Karyawan Swasta</option>
                            <option value="pns">PNS/ASN</option>
                            <option value="tenaga pendidik">Tenaga Pendidik</option>
                        </select>
                    </div>                      
                    <div class="form-group">
                        <label for="instansi">Instansi</label>
                        <input type="text" name="agency" id="instansi" class="form-control mb-3">
                    </div>
                    <div class="form-group">
                        <label for="alamat">Alamat</label>
                        <input type="text" name="address" id="alamat" class="form-control mb-3">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control mb-3">
                    </div>
                    <div class="form-group">
                        <label for="confPassword">Confirm Password</label>
                        <input type="password" name="confPassword" id="confPassword" class="form-control mb-3">
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 mb-2">Daftar Sekarang</button>
                </form>
            </div>
        </div>
    </div>
    <div class="bg-img signup"></div>
</div>