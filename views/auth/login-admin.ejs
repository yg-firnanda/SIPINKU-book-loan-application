<div class="center-div">
    <div class="login-container h-100 d-flex align-items-center justify-content-center">
        <div class="card" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; width: 500px;">
            <div class="card-body">
                <h3 class="card-title text-center mb-5 mt-3">Login for Admin</h3>
                <form action="/login-admin" method="POST">
                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" id="email" name="email">
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mt-5 mb-3">Login</button>
                </form>
            </div>
        </div>
    </div>
    <div class="bg-img login-admin"></div>
</div>
